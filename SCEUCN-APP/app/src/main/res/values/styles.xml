<resources>

    <!-- Base application theme. -->
    <style name="Theme.Primary.Base.Light" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ucn_azul</item>
        <item name="colorPrimaryDark">@color/ucn_azuloscuro</item>
        <item name="colorAccent">@color/ucn_naranjo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="isLightTheme">true</item>
        <item name="backgroundcolor">@color/blue_50</item>
        <item name="cardbackground">@color/white</item>
        <item name="textcolor">@color/black</item>
        <item name="tintcolor">@color/ucn_naranjo</item>
        <item name="buttoncolor">@color/ucn_azul</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="Theme.Primary.Base.Dark" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ucn_azul</item>
        <item name="colorPrimaryDark">@color/ucn_azuloscuro</item>
        <item name="colorAccent">@color/ucn_naranjo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundcolor">@color/ucn_azulnegro</item>
        <item name="cardbackground">@color/ucn_azul</item>
        <item name="textcolor">@color/white</item>
        <item name="tintcolor">@color/ucn_naranjo</item>
        <item name="buttoncolor">@color/ucn_naranjo</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- styles.xml -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/mp_reg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation"> @android:anim/fade_in</item>
        <item name="android:windowExitAnimation"> @android:anim/fade_out</item>
    </style>

</resources>
